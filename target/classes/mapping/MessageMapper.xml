<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yang.medical.mapper.MessageMapper">
    <insert id="add" parameterType="com.yang.medical.entity.Message">
        INSERT INTO notify(Rid,record) VALUES (#{rid},#{record});
    </insert>


    <select id="get" resultType="com.yang.medical.entity.Message">
        select * from notify where rid=#{rid};
    </select>

    <delete id="delete" parameterType="Message">
        delete from notify where rid=#{rid};
    </delete>
</mapper>